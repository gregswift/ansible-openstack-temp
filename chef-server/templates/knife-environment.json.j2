{
  "name": "{{ openstack_environment }}",
  "description": "",
  "cookbook_versions": {
  },
  "json_class": "Chef::Environment",
  "chef_type": "environment",
  "default_attributes": {
    "horizon": {
      "theme": "{{ dashboard_theme }}"
    },
    "package_component": "{{ openstack_release }}"
  },
  "override_attributes": {
    "custom_template_banner": "{{ custom_banner }}"
    "hardware" : {
      "install_oem": false
    },
    "monitoring" : {
      "metric_provider" : "collectd",
      "procmon_provider" : "monit"
    },
    "mysql": {
      "allow_remote_root": true,
      "root_network_acl": "%",
      "tunable": {
        "log_queries_not_using_index": false
      }
    },
   "keystone": {
      "tenants": [
         "admin",
         "service",
{% if tenants %}
{% for tenant in tenants %}
         "{{ tenant }}",
{% enfdor %}
{% else %}
         "local-tenant",
{% endif %}
      ],
      "users":{
         "admin": {
            "password": "{{ openstack_admin_password }}",
            "roles":{
               "admin": [
                  "admin"
               ]
            }
         }
      },
      "admin_user": "admin"
   }, 
    "osops": {
      "apply_patches": true
    },
    "developer_mode": false,
    "glance": {
      "api": {
{% if default_store %}
        "default_store": "{{ default_store }}"
{% end if %}
      },
      "images": [
{% for image in glance_images %}
         "{{ image }}",
{% enfdor %}
      ],
      "image_upload": false
    },
    "nova": {
      "config": {
        "ram_allocation_ratio": {{ ram_ratio }},
        "cpu_allocation_ratio": {{ cpu_ratio }},
        "start_guests_on_host_boot": {{ autostart }},
        "resume_guests_state_on_host_boot": {{ resume_state }},
        "use_single_default_gateway": false
      },
      "network": {
        "fixed_range": "<fixed network>",
        "public_interface": "{{ networks['public']['bridge'] }}",
        "multi_host": true,
        "dmz_cidr": "{% if dmz_cidr %}{{ dmz_cidr }}{% else %}10.128.0.0/24{% end if %}"
      },
      "networks": [
{% for network in networks %}
        {
          "num_networks": "{% if network['num_networks'] %}{{ network['num_networks'] }}{% else %}1{% end if %}",
          "bridge": "{{ network['bridge'] }}",
          "label": "{{ network['label'] }}",
          "bridge_dev": "{{ network['bridge_dev'] }}",
          "dns1": "{{ network['dns_server1'] }}",
          "dns2": "{{ network['dns_server2'] }}",
          "network_size": "{{ network['network_size'] }}",
          "ipv4_cidr": "{{ network['ipv4_cidr'] }}"
        },
{% end for %}
      ]
    },
    "osops_networks": {
      "management": "{{ mgmt_ipv4_cidr }}",
      "nova": "{{ mgmt_ipv4_cidr }}",
{% for network in networks %}
      "{{ network['label'] }}": "{{ network['ipv4_cidr'] }}",
{% end for %}
    }
  }
}